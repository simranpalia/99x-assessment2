
@{
    ViewBag.Title = "Upload";
}

@using (Html.BeginForm("UploadBalance", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <div class="form-group text-center">
            <div>
                <h5>The order of the columns should be</h5>
                <p class="text-info">
                    Account, Balance
                </p>
            </div>
            <p class="text-muted">
                <strong>Alternatively: </strong>Download the sample excel from the link below
            </p>
            <a href="~/Content/Excelsample/ExcelSampleAccount.xlsx" class="btn btn-success">Download Sample</a>
        </div>
        <hr/>
        <div class="form-group">
            <div class="col-sm-12">
                <div class="col-sm-6">
                    @Html.DropDownList("ddlYear", new SelectList(Enumerable.Range(2022, 10)), "--Year--", new { @class = "form-control", required = "required" })
                </div>
                <div class="col-sm-6">
                    @Html.DropDownList("ddlMonth", new SelectList(Enumerable.Range(1, 12)), "--Month--", new { @class = "form-control", required = "required" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <input type="file" name="file" class="form-control" required/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </div>
    </div>
}
