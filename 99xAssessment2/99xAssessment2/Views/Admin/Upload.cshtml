
@{
    ViewBag.Title = "Upload";
}

@using (Html.BeginForm("UploadBalance", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-12">
                <div class="col-sm-6">
                    @Html.DropDownList("ddlYear", new SelectList(Enumerable.Range(2000, 100)), "--Year--", new { @class = "form-control" ,required="required"})
                </div>
                <div class="col-sm-6">
                    @Html.DropDownList("ddlMonth", new SelectList(Enumerable.Range(1, 12)), "--Month--", new { @class = "form-control", required = "required" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <input type="file" name="file" class="form-control" required />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
